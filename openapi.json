{
  "openapi": "3.0.0",
  "info": {
    "title": "API REST microservice para transferências feitas por clientes",
    "description": "Fornece contratos de transferências entre usuários e banco de dados [GitHub](https://github.com/LeonardoFM/BDD-SQLAlchemy-Bottle) .",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost/",
      "description": "inclusão do sevidor de produção"
    }
  ],
  "paths": {
    "/usuarios": {
      "get": {
        "summary": "Lista todos os usuários",
        "description": "Percorre o banco de dados para fornecer as informações dos usuários (nome,cnpj)",
        "responses": {
          "201": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    },
                    "cnpj": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Problema com o sevidor."
          },
          "409": {
            "description": "Conflito com usuário."
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/usuarios/": {
      "post": {
        "summary": "Retorna o json da inclusão",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "cnpj": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/transferencia/{data}": {
      "get": {
        "summary": "Restorna as transferências feitas em uma determinada data",
        "parameters": [
          {
            "name": "data",
            "in": "path",
            "required": true,
            "description": "Data requerida",
            "schema": {
              "type": "string",
              "example": "2019-05-04"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "A JSON schema of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "string"
                    },
                    "transferências": {
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "usuario_id": {
                            "type": "integer"
                          },
                          "pagador_nome": {
                            "type": "string"
                          },
                          "pagador_banco": {
                            "type": "string"
                          },
                          "pagador_agencia": {
                            "type": "string"
                          },
                          "pagador_conta": {
                            "type": "string"
                          },
                          "beneficiario_nome": {
                            "type": "string"
                          },
                          "beneficiario_banco": {
                            "type": "string"
                          },
                          "beneficiario_agencia": {
                            "type": "string"
                          },
                          "beneficiario_conta": {
                            "type": "string"
                          },
                          "valor": {
                            "type": "number"
                          },
                          "tipo": {
                            "type": "string"
                          },
                          "status": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
